<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="User">
    <!--可以重用的SQL块，也可以被其他语句引用-->
    <sql id="columns">
        id,name
    </sql>

    <!--当这里配置了resultType后 mybatis会自动扫描配置的javabean-->
    <select id="getAllTest" resultType="com.dk.mybatis.entity.User">
        select <include refid="columns"/> from t_test
    </select>

    <update id="createTable">
        create table if not exists t_hi (id int auto_increment primary key ,
                           name varchar(20) not null )
    </update>
    <!--TABLE_SCHEMA='dbname' and-->
    <!--com.dk.mybatis.mapper.User-->
    <!--这里tablename用'$'出错 加上''单引号默认为 [like 模糊查询] 配合$使用 模糊查询中 #不带''单引号-->
    <select id="getTable" parameterType="String" resultType="Integer">
        select count(*) from INFORMATION_SCHEMA.TABLES where TABLE_NAME=#{tablename};
    </select>
</mapper>
